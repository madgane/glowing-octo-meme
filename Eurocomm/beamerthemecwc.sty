\institute[CWC]{Centre for Wireless Communications (CWC), \\ Department of Communications Engineering (DCE), \\ University of Oulu, Oulu, FI-90014}
\date{}

\mode<presentation>

% hide controls
\beamertemplatenavigationsymbolsempty

% colors
\definecolor{footgrey}{RGB}{171,176,179}

\definecolor{footgrey}{RGB}{171,176,179}
\definecolor{headgreen}{RGB}{166,200,66}

\setbeamercolor{headcolor}{fg=white,bg=headgreen}
\setbeamercolor{footcolor}{fg=footgrey,bg=white}

\usecolortheme[RGB={166,200,66}]{structure}

\setbeamerfont{section in head/foot}{series=\normalfont}

\setbeamertemplate{headline}
{
    \linethickness{0.25pt}
    \begin{beamercolorbox}[wd=\paperwidth,ht=10pt]{headcolor}
        \usebeamerfont{section in head/foot}%
        \hspace{1.0cm}\raisebox{3pt}{\insertdate}
        \hfill
        \raisebox{3pt}{\insertframenumber}\hspace{1.5cm}
    \end{beamercolorbox}
}

\setbeamertemplate{footline}
{
    \linethickness{0.25pt}
    \begin{beamercolorbox}[leftskip=.3cm,wd=\paperwidth,ht=1cm,sep=0.1cm]{footcolor}
        \usebeamerfont{section in head/foot}%
        \includegraphics[width=0.33\textwidth]{cwc-logo}
        \hfill
        \raisebox{6pt}{\tiny{\copyright} Centre for Wireless Communications (CWC)}%{\insertinstitute}
        \hfill
        \raisebox{4pt}{\includegraphics[width=0.15\textwidth]{unioulu-logo}}
        \hspace{0.75cm}
    \end{beamercolorbox}
}

\newcommand{\ccite}[1]{{\color{blue}\scriptsize\cite{#1}}}
\newcommand{\dis}{\hspace{0.1cm}} % splitting point in the equation
\definecolor{cwcgray}{rgb}{0.373,0.373,0.373}
\definecolor{cwcblack}{rgb}{0.2,0.2,0.2}

\setbeamercolor{title}{fg=cwcgray}%green!70!black,bg=green!10!white}
\setbeamercolor{item}{fg=yellow!50!red}
\setbeamercolor{frametitle}{fg=cwcblack}

\setbeamersize{text margin left=0.5cm, text margin right=0.5cm}

%\setbeamertemplate{frametitle}[default][center]
\setbeamertemplate{frametitle}{
	\leavevmode
	\begin{beamercolorbox}[wd=\paperwidth]{}
		\begin{center}
			\vspace{-0.4cm}
			\insertframetitle
		\end{center}
		\vspace{-0.4cm}
	\end{beamercolorbox}
}

\setbeamertemplate{bibliography item}[text]
\setbeamertemplate{itemize item}[square]
\setbeamertemplate{itemize subitem}[triangle]

\mode<all>
